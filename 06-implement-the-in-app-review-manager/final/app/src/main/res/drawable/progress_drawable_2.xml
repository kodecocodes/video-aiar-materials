<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Define the background properties like color etc -->
  <item android:id="@android:id/background">
    <layer-list>

      <item>
        <shape android:shape="rectangle">

          <corners android:radius="@dimen/banner_play_corner_radius" />
          <stroke
            android:width="@dimen/banner_play_stroke_width"
            android:color="@color/colorIconInverse" />
        </shape>
      </item>

      <item
        android:bottom="@dimen/banner_play_icon_padding"
        android:drawable="@drawable/ic_material_icon_play"
        android:left="@dimen/banner_play_icon_padding"
        android:right="@dimen/banner_play_icon_padding"
        android:top="@dimen/banner_play_icon_padding" />

    </layer-list>
  </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip android:drawable="@drawable/ic_material_icon_play_banner_transparent_2">

    </clip>
  </item>
</layer-list>
