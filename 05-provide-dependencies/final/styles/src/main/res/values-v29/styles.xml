    <item name="iconTint">@color/colorIcon</item>
    <item name="iconPadding">@dimen/button_padding_internal</item>
    <item name="iconGravity">textStart</item>
    <item name="android:textColor">@color/colorIcon</item>
    <item name="android:textAppearance">@style/TextAppearance.Button.Regular</item>
    <item name="rippleColor">@color/colorButtonIconRipple</item>
