  <style name="Button.Text.Inverse" parent="Button.Text">
    <item name="android:textColor">@color/textColorButtonInverse</item>
  </style>

  <style name="Button.Text.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
    <item name="android:minHeight">@dimen/button_height_default</item>
